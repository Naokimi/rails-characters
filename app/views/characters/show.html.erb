<div class="card-container d-flex align-items-center">
  <div class="plx-card gold">
    <div class="pxc-bg" style="background-image:url(<%= @character.specie.photo %>);">  </div>
    <div class="pxc-avatar"><img src="<%= @character.photo %>"/></div>
    <div class="pxc-stopper">   </div>
    <div class="pxc-subcard">
      <div class="pxc-title"><%= @character.name %></div>
      <div class="pxc-feats">
        <% @character.description.split("\n").each do |par| %>
          <p><%= par %></p>
        <% end unless @character.description.nil? %>
      </div>
      <div class="pxc-tags">
        <div><%= link_to '<i class="fas fa-plus"></i>'.html_safe, new_character_power_path(@character) %></div>
        <% @character.powers.each do |power| %>
        <div><%= power.name %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
